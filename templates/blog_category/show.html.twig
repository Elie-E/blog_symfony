{% extends 'base.html.twig' %}

{% block title %}BlogCategory{% endblock %}

{% block body %}
    <h1>BlogCategory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_category.id }}</td>
            </tr>
            <tr>
                <th>KeyCat</th>
                <td>{{ blog_category.keyCat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ blog_category.lng }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog_category.description }}</td>
            </tr>
            <tr>
                <th>Sort</th>
                <td>{{ blog_category.sort }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ blog_category.dateCreation ? blog_category.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modification</th>
                <td>{{ blog_category.dateModification ? blog_category.dateModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Posts</th>

                {% for blogPost in blog_category.blogPosts %}
                <td><a href="{{ path('blog_post_show', {'id': blogPost.id}) }}">{{ blogPost.title }}</a></td>
                {% endfor %}

            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_category_index') }}">back to list</a>

    <a href="{{ path('blog_category_edit', {'id': blog_category.id}) }}">edit</a>

    {{ include('blog_category/_delete_form.html.twig') }}
{% endblock %}
